<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/photographer_cover_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/gray_100"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical">

        <com.android.liujian.flichrphotos.view.CircleImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:id="@+id/photographer_author_image"
            app:civ_border_color="@android:color/background_light"
            android:src="@mipmap/default_buddyicon"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:id="@+id/photographer_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/photo_author_name"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/photographer_follow"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="0"
            android:paddingRight="16dp"
            android:drawablePadding="16dp"
            android:text="Follow"
            android:textSize="16sp"
            android:drawableLeft="@android:drawable/ic_input_add"
            android:background="@color/indigo_500"/>
    </LinearLayout>

    <TextView
        android:id="@+id/photographer_author_evaluate"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="This is a evaluation."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@color/gray_100"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/black"/>

</LinearLayout>